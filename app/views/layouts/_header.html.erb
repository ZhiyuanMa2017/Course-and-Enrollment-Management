<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">

    <div class="navbar-header">
      <%= link_to "CourseSelect", root_path, class: 'navbar-brand' %>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">

        <li class=<%= "active" if params[:controller] == "homes" %>> <%= link_to "Homepage", root_path %></li>

        <% if student_logged_in? %>
          <li class=<%= "active" if params[:controller] == "courses" %>> <%= link_to "My Courses", courses_path %></li>
        <% elsif teacher_logged_in? %>
          <li class=<%= "active" if params[:controller] == "courses" %>> <%= link_to "Courses Management", courses_path %></li>
        <% elsif admin_logged_in? %>
          <li class=<%= "active" if params[:controller] == "courses" %>> <%= link_to "Admin Management", courses_path %></li>
        <% end %>

      </ul>

      <ul class="nav navbar-nav navbar-right">

        <% if current_user %>
          <li>
            <%= link_to edit_user_path(current_user) do %>
              <%= current_user.name %><span class="glyphicon glyphicon-user"></span>
            <% end %>
          </li>

          <li>
            <% if admin_logged_in? %>
              <%= link_to edit_user_path(current_user) do %>
                Role: <u> Admin </u><span class="glyphicon glyphicon-user"></span>
              <% end %>
            <% end %>
            <% if student_logged_in? %>
              <%= link_to edit_user_path(current_user) do %>
                Role: <b> Student </b><span class="glyphicon glyphicon-user"></span>
              <% end %>
            <% end %>
            <% if teacher_logged_in? %>
              <%= link_to edit_user_path(current_user) do %>
                Role: <b><i> Instructor </i></b><span class="glyphicon glyphicon-user"></span>
              <% end %>
            <% end %>
          </li>

          <li>
            <%= link_to sessions_logout_path, method: :delete do %>
              Log out <span class="	glyphicon glyphicon-off"></span>
            <% end %>
          </li>

          <% if admin_logged_in? %>
            <li><%= link_to new_user_path do %>
                Create Instructor <span class="	glyphicon glyphicon-log-in"></span>
              <% end %>
            </li>

            <li><%= link_to users_new2_path do %>
                Create Student <span class="	glyphicon glyphicon-log-in"></span>
              <% end %>
          <% end %>

        <% else %>

          <li><%= link_to sessions_login_path do %>
              Log in <span class="	glyphicon glyphicon-user"></span>
            <% end %>
          </li>

          <li><%= link_to new_user_path do %>
              Sign up as Instructor <span class="	glyphicon glyphicon-log-in"></span>
            <% end %>
          </li>

          <li><%= link_to users_new2_path do %>
              Sign up as Student <span class="	glyphicon glyphicon-log-in"></span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>




