<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <% if teacher_logged_in? %><h3 class="panel-title">Enrollment Management: <%=@course.name%></h3><% end %>
          <% if admin_logged_in? %><h3 class="panel-title"> Admin Enrollment Management: <%=@course.name%></h3><% end %>
        </div>
        <div class="panel-body" style="min-height: 450px">





          <table class="table table-striped table-hover">
            <thead>

            <tr>
              <th>Name</th>
              <th>ID</th>
              <th>Email</th>
              <th>Date of Birth</th>
              <th>Phone number</th>
              <th>Major</th>

            </tr>
            </thead>
            <tbody>

            <% @enrollments.each do |grade| %>
              <tr>
                <td><%= grade.user.name %></td>
                <td><%= grade.user.id %></td>
                <td><%= grade.user.email %></td>
                <td><%= grade.user.birthday %></td>
                <td><%= grade.user.phone_number %></td>
                <td><%= grade.user.major %></td>

                <% if teacher_logged_in? %>
                  <td> <%= link_to "Delete", enrollment_path(grade), method: :delete, data: { confirm: "Are you sure?" } %> </td>
                  <% end %>
                <% if admin_logged_in? %>
                  <td> <%= link_to "Delete", enrollment_path(grade), method: :delete, data: { confirm: "Are you sure?" } %> </td>
                <% end %>
                <% end %>

              </tr>
            <%# end %>
            </tbody>
          </table>

          <%= will_paginate @enrollments %>
        </div>
      </div>
    </div>
  </div>
</div>


